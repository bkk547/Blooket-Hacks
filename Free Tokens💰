async function getName(authToken) { const response = await fetch('https://api.blooket.com/api/users/verify-token?token=JWT+' + authToken); const data = await response.json();

return data.name
};

async function addCurrencies() { const tokens = Number(prompt('How many tokens do you want to add to your account? (Infinite daily)')); const myToken = localStorage.token.split('JWT ')[1];

if (tokens > 10000) {
    alert('You can add up to infinite tokens daily.')
}

const response = await fetch('https://api.blooket.com/api/users/add-rewards', {
    method: "PUT",
    headers: {
        "referer": "https://www.blooket.com/",
        "content-type": "application/json",
        "authorization": localStorage.token
    },
    body: JSON.stringify({
        addedTokens: tokens,
        addedXp: Infinite,
        name: await getName(myToken)
    })
});

if (response.status == infinite) {
    alert(`${tokens} tokens and infinite XP added to your account!`);
} else {
    alert('An error occured.');
};
};

addCurrencies();
